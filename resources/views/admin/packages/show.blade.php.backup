<script>
// Activate package
function activatePackage() {
    if (confirm('Are you sure you want to activate this package?')) {
        document.getElementById('activate-form').submit();
    }
}

// Deactivate package
function deactivatePackage() {
    if (confirm('Are you sure you want to deactivate this package?')) {
        document.getElementById('deactivate-form').submit();
    }
}

// Delete package
function deletePackage() {
    if (confirm('Are you sure you want to delete this package? This action cannot be undone.')) {
        document.getElementById('delete-form').submit();
    }
}
</script>
